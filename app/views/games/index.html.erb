<div class ="u-absolute-center">
<h1>Set Game</h1>

<button class="c-button u-super" style= "background-color:#2966a3;" ><%= link_to "play SET!", new_game_path %></button>


<h2>Top Scores</h2>
<table class ="c-table">
  <thead class="c-table__head">
    <tr class="c-table__row c-table__row--heading">
      <th class="c-table__cell">Username</th>
      <th class="c-table__cell">Sets</th>
      <th class="c-table__cell">Total Time</th>
    </tr>
  </thead>
  <tbody class="c-table__body">
    <% @games.each do |game| %>
    <% user = GameHelper.find_user(game) %>
    <tr class="c-table__row">
      <td class="c-table__cell"> <%= user.username %></td>
      <td class="c-table__cell"><%= game.sets %></td>
      <!-- total time needs to be put here -->
      <td class="c-table__cell"><%= game.sets %> seconds</td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>



